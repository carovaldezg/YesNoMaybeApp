<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LargeText">
        <item name="android:textSize">@dimen/font_huge</item>
    </style>

    <style name="MediumText">
        <item name="android:textSize">@dimen/font_medium_extra</item>
    </style>

    <style name="MediumText.Blue" parent="MediumText">
        <item name="android:textColor">@color/tory_blue</item>
    </style>

    <style name="LargeText.Blue" parent="LargeText">
        <item name="android:textColor">@color/tory_blue</item>
    </style>

    <style name="LargeText.Shamrock" parent="LargeText">
        <item name="android:textColor">@color/Shamrock</item>
    </style>

    <style name="GiantText">
        <item name="android:textSize">@dimen/font_giant</item>
    </style>

    <style name="GiantText.Blue" parent="GiantText">
        <item name="android:textColor">@color/tory_blue</item>
    </style>

    <style name="BlueText">
        <item name="android:textColor">@color/tory_blue</item>
    </style>

</resources>
