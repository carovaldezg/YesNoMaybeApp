<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/title_bar"
        android:id="@+id/fragment_profile_title_bar_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/spacing_large_extra"
            android:layout_marginRight="@dimen/spacing_large_extra"
            android:background="@drawable/rounded_corners_layout"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fragment_profile_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_huge"
                android:layout_marginBottom="@dimen/spacing_medium"
                android:textAlignment="center"
                style="@style/LargeText.Blue" />

            <TextView
                android:id="@+id/fragment_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_medium"
                android:textAlignment="center"
                style="@style/MediumText.Blue" />

            <TextView
                android:id="@+id/fragment_profile_user_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_huge"
                android:textAlignment="center"
                style="@style/MediumText.Blue" />

        </LinearLayout>

        <ImageView
            android:id="@+id/fragment_profile_profile_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal" />

    </FrameLayout>

    <TextView
        android:id="@+id/fragment_profile_log_out_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="@dimen/spacing_huge"
        android:text="@string/log_out"
        android:gravity="center"
        style="@style/LargeText.Shamrock" />

</LinearLayout>